{
  "name": "cheerleader",
  "displayName": "cheerleader",
  "description": "Supercharge your dev experience with an anime coding companion",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Themes",
    "AI",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/endernoke/vscode-cheerleader"
  },
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cheerleader.helloWorld",
        "title": "Hello World",
        "category": "Cheerleader"
      },
      {
        "command": "cheerleader.askCopilot",
        "title": "Ask Copilot",
        "category": "Cheerleader"
      },
      {
        "command": "cheerleader.getAnnotations",
        "title": "Toggle cheerleader annotations",
        "icon": "$(comment)",
        "category": "Cheerleader"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "cheerleader.getAnnotations",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cheerleader.askCopilot",
        "key": "cmd+shift+a",
        "mac": "cmd+shift+a"
      }
    ],
    "chatParticipants": [
      {
        "id": "cheerleader.chat",
        "name": "cheerleader",
        "fullName": "Cheerleader AI",
        "description": "Supercharge your dev experience with an anime coding companion",
        "isSticky": true,
        "commands": [
          {
            "name": "exercise",
            "description": "Get a random exercise to solve"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vscode": "^1.1.37",
    "ws": "^8.18.1"
  }
}
