{
  "name": "cheerleader",
  "displayName": "cheerleader",
  "description": "Supercharge your dev experience with an anime coding companion",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Themes",
    "AI",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/endernoke/vscode-cheerleader"
  },
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cheerleader.launchOverlay",
        "title": "Launch Interactive Cheerleader",
        "category": "Cheerleader"
      },
      {
        "command": "cheerleader.killOverlay",
        "title": "Dismiss Interactive Cheerleader",
        "category": "Cheerleader"
      },
      {
        "command": "cheerleader.testVoice",
        "title": "Test Voice Module",
        "category": "Testing"
      },
      {
        "command": "cheerleader.startRecording",
        "title": "Start Voice Recording",
        "category": "Testing"
      },
      {
        "command": "cheerleader.stopRecording",
        "title": "Stop Voice Recording",
        "category": "Testing"
      },
      {
        "command": "cheerleader.startVoiceInteraction",
        "title": "Speak to Cheerleader",
        "category": "Cheerleader"
      },
      {
        "command": "cheerleader.inlineChat",
        "title": "Inline Chat with Cheerleader",
        "category": "Cheerleader",
        "icon": "$(bell)"
      },
      {
        "command": "cheerleader.reviewCode",
        "title": "Review Code with Cheerleader",
        "category": "Cheerleader",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "cheerleader.inlineChat",
          "group": "navigation"
        },
        {
          "command": "cheerleader.reviewCode",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cheerleader.startVoiceInteraction",
        "key": "cmd+shift+v",
        "mac": "cmd+shift+v"
      },
      {
        "command": "cheerleader.inlineChat",
        "key": "cmd+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "chatParticipants": [
      {
        "id": "cheerleader.chat",
        "name": "cheerleader",
        "fullName": "Cheerleader AI",
        "description": "Supercharge your dev experience with an anime coding companion",
        "isSticky": true,
        "commands": [
          {
            "name": "exercise",
            "description": "Get a random exercise to solve"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-microphone": "^0.1.4",
    "@types/play-sound": "^1.1.2",
    "@types/vscode": "^1.98.0",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "electron": "^35.1.1",
    "elevenlabs": "^1.55.0",
    "node-microphone": "^0.1.6",
    "play-sound": "^1.1.6",
    "tsx": "^4.19.3",
    "uuid": "^11.1.0",
    "vscode": "^1.1.37",
    "ws": "^8.18.1"
  }
}
